#####
# Configuration file for the Constrained Device App (CDA)
#
# This provides a section-based configuration format for use by
# ConfigUtil with keys defined in ConfigConst.
#
# IMPORTANT: Edit this file to meet your local system requirements.
#
# Smart Office Environmental Management System Configuration
#

#
# Cloud client configuration information
#
[Cloud.GatewayService]
credFile       = ./cred/UbidotsCloudCred.props
certFile       = ./cert/UbidotsCloudCert.pem
host           = industrial.api.ubidots.com
port           = 1883
securePort     = 8883
defaultQoS     = 0
keepAlive      = 30
enableCrypt    = True
baseUrl        = https://things.ubidots.com/api/v1.6/
baseTopic      = /v1.6/devices/

#
# MQTT client configuration information
#
[Mqtt.GatewayService]
credFile       = ./cred/PiotMqttLocalCred.props
certFile       = ./cert/PiotMqttLocalCertFile.pem
host           = localhost
port           = 1883
securePort     = 8883
defaultQoS     = 0
keepAlive      = 60
enableAuth     = False
enableCrypt    = False

#
# CoAP client configuration information
# DISABLED for Lab Module 10 (focusing on MQTT)
#
[Coap.GatewayService]
credFile       = ./cred/PiotCoapCred.props
certFile       = ./cert/PiotCoapLocalCertFile.pem
host           = localhost
port           = 5683
securePort     = 5684
enableAuth     = False
enableCrypt    = True

#
# CDA specific configuration information
# Smart Office Environmental Management System
#
[ConstrainedDevice]
deviceLocationID = constraineddevice001
enableEmulator   = True
enableSimulator  = True
enableSenseHAT   = False
enableMqttClient = True
enableCoapServer = False
enableCoapClient = False
enableSystemPerformance = True
enableSensing    = True
enableLogging    = True
pollCycleSecs    = 5
testGdaDataPath  = /tmp/gda-data
testCdaDataPath  = /tmp/cda-data
testEmptyApp     = False

# Sensor simulation ranges - Smart Office Project
humiditySimFloor   =   35.0
humiditySimCeiling =   65.0
pressureSimFloor   =  990.0
pressureSimCeiling = 1010.0
tempSimFloor       =   18.0
tempSimCeiling     =   28.0
co2SimFloor        =  400.0
co2SimCeiling      = 1400.0

# Smart Office Project - Ventilation System Configuration
# Ventilation activates when:
# - CO2 > 1000 ppm (poor air quality)
# - Temperature > 26Â°C (too hot)
handleCO2ChangeOnDevice = True
triggerVentilationCO2Threshold = 1000.0
triggerVentilationTempThreshold = 26.0

# Smart Office Project - Air Purifier Configuration
# Air Purifier activates when:
# - Humidity > 60% (too humid - mold risk)
triggerAirPurifierHumidityThreshold = 60.0

# Legacy HVAC temperature trigger (keeping for compatibility)
handleTempChangeOnDevice = False
triggerHvacTempFloor     = 18.0
triggerHvacTempCeiling   = 20.0

# Camera settings (not used in Smart Office project)
streamHostAddr      = 127.0.0.1
streamHostLabel     = localhost
streamPort          = 8554
streamProtocol      = rtsp
streamPath          = stream
streamEncoding      = MJPG
streamFrameWidth    = 1440
streamFrameHeight   = 1080
streamFps           =   30
imageFileExt        = .png
videoFileExt        = .avi